{
  "extends": [
    "plugin:@nrwl/nx/react",
    "./.eslintrc.base.json",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:jsx-a11y/strict"
  ],
  "plugins": [
    "@typescript-eslint",
    "import",
    "unused-imports",
    "cypress",
    "jsx-a11y",
    "eslint-plugin-no-inline-styles"
  ],
  "ignorePatterns": [
    "!**/*"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    }
  ]
}
